@model MachineSpecs.Models.Computer

<div class="ml-5 mt-2 mr-5">
    <h4>Edit Computer @Model.ComputerID</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Save">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ComputerID" />
                <div class="form-group">
                    <label asp-for="Memory" class="control-label"></label>
                    <input asp-for="Memory" class="form-control" />
                    <span asp-validation-for="Memory" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StorageCapacity" class="control-label"></label>
                    <input asp-for="StorageCapacity" class="form-control" />
                    <span asp-validation-for="StorageCapacity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StorageType" class="control-label"></label>
                    <input asp-for="StorageType" class="form-control" />
                    <span asp-validation-for="StorageType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Graphics Card</label>
                    <div>
                        <select asp-for="GraphicsCard.Manufacturer" class="form-control" asp-items="ViewBag.GraphicsCardManufacturers"></select>
                        <span asp-validation-for="GraphicsCard.Manufacturer" class="text-danger"></span>
                    </div>
                    <div>
                        <select asp-for="GraphicsCard.Model" class="form-control" asp-items="ViewBag.GraphicsCardModels"></select>
                        <span asp-validation-for="GraphicsCard.Model" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Weight" class="control-label"></label>
                    <input asp-for="Weight" class="form-control" />
                    <span asp-validation-for="Weight" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Power" class="control-label"></label>
                    <input asp-for="Power" class="form-control" />
                    <span asp-validation-for="Power" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Processor</label>
                    <div>
                        <select asp-for="Processor.Manufacturer" class="form-control" asp-items="ViewBag.ProcessorManufacturers"></select>
                        <span asp-validation-for="Processor.Manufacturer" class="text-danger"></span>
                    </div>
                    <div>
                        <select asp-for="Processor.Model" class="form-control" asp-items="ViewBag.ProcessorModels"></select>
                        <span asp-validation-for="Processor.Model" class="text-danger"></span>
                    </div>
                </div>

